package br.com.projeto.test;

import javax.swing.JOptionPane;

import br.com.projeto.beans.Endereco;
import br.com.projeto.beans.NivelUsuario;
import br.com.projeto.beans.Usuario;
import br.com.projeto.bo.UsuarioBO;

public class CadastroUsuarioBO {

	public static void main(String[] args) {
		try {
			UsuarioBO usuarioBO = new UsuarioBO();
			Usuario usuario = new Usuario();
			
			Endereco endereco = new Endereco();
			NivelUsuario nivelUsuario = new NivelUsuario();
			
			usuario.setEmail(JOptionPane.showInputDialog("Email"));
			
			endereco.setLougradouro(JOptionPane.showInputDialog("Endereco"));
			endereco.setNumero(JOptionPane.showInputDialog("Numero"));
			endereco.setComplemento(JOptionPane.showInputDialog("Complemento"));
			endereco.setCep(JOptionPane.showInputDialog("Cep"));
			endereco.setZona(JOptionPane.showInputDialog("Zona"));
			endereco.setBairro(JOptionPane.showInputDialog("Bairro"));
			endereco.setCidade(JOptionPane.showInputDialog("Cidade"));
			endereco.setEstado(JOptionPane.showInputDialog("Estado"));
			usuario.setEndereco(endereco);
			
			nivelUsuario.setNome(JOptionPane.showInputDialog("Nível do usuário"));
			usuario.setNivel(nivelUsuario);
			usuario.setLogin(JOptionPane.showInputDialog("User"));
			usuario.setSenha(JOptionPane.showInputDialog("Senha"));
			
			usuarioBO.novoUsuario(usuario);			
		}catch(Exception e) {
			e.printStackTrace();
		}finally {
			try {
				
			}catch(Exception e) {
				e.printStackTrace();
			}
		}

	}

}
